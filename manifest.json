{
  "name": "Share link via email",
  "version": "2.3",
  "description": "Adds a button and context menu item to send the page URL or a link URL via email",
  "manifest_version": 2,
  "icons": {
    "16": "stock_mail.png",
    "48": "stock_mail.png",
    "128": "stock_mail.png"
  },
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": {
      "19": "stock_mail.png",
      "38": "stock_mail.png"
    },
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
        "functions.js", 
        "emailme.js"
    ]
  }
}